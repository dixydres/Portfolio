<style>
    .prose {
        max-width: 800px;
        margin: 0 auto;
        color: #333;
        line-height: 1.8;
        font-size: 1.1rem;
        padding: 0 1rem;
    }
    .prose :global(h1) {
        font-size: 2.8rem;
        line-height: 1.1;
        margin-bottom: 2rem;
        font-weight: 800;
        background: linear-gradient(to right, #1a1a1a, #555);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        scroll-margin-top: 80px; /* Ajout d'une marge de défilement pour éviter que le titre soit caché par la navbar */
    }
    .prose :global(h2) {
        font-size: 2rem;
        line-height: 1.2;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
        font-weight: 700;
        position: relative;
        padding-bottom: 0.5rem;
        scroll-margin-top: 70px; /* Ajout d'une marge de défilement pour les titres de niveau 2 */
    }

    .prose :global(h2::after) {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 80px;
        height: 4px;
        background-color: #4a89dc;
        border-radius: 2px;
    }

    .prose :global(h3) {
        font-size: 1.5rem;
        line-height: 1.3;
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .prose :global(p) {
        margin-bottom: 1.5rem;
    }

    .prose :global(ul) {
        list-style-type: none;
        margin-left: 0;
        margin-bottom: 1.5rem;
        padding-left: 1.2rem;
    }

    .prose :global(ul li) {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.8rem;
    }

    .prose :global(ul li::before) {
        content: "•";
        position: absolute;
        left: 0;
        color: #4a89dc;
        font-weight: bold;
        font-size: 1.2em;
    }

    .prose :global(ol) {
        list-style-type: decimal;
        margin-left: 1.2rem;
        margin-bottom: 1.5rem;
        counter-reset: item;
        padding-left: 1.2rem;
    }

    .prose :global(ol li) {
        position: relative;
        padding-left: 0.5rem;
        margin-bottom: 0.8rem;
    }

    .prose :global(a) {
        color: #4a89dc;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: border-color 0.3s ease;
    }

    .prose :global(a:hover) {
        border-bottom-color: #4a89dc;
    }

    .prose :global(img) {
        max-width: 100%;
        height: auto;
        margin: 2.5rem auto;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        display: block;
    }

    .prose :global(blockquote) {
        border-left: 4px solid #4a89dc;
        padding: 1rem 1.5rem;
        background-color: #f8f9fa;
        margin: 2rem 0;
        font-style: italic;
        border-radius: 0 5px 5px 0;
    }

    .prose :global(blockquote p) {
        margin-bottom: 0;
    }

    .prose :global(pre) {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 8px;
        overflow-x: auto;
        margin: 2rem 0;
        box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.05);
    }

    .prose :global(code) {
        background: #f0f2f5;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-family: "Fira Code", "Consolas", monospace;
        font-size: 0.9em;
    }

    .prose :global(hr) {
        border: none;
        height: 1px;
        background-color: #eaecef;
        margin: 2rem 0;
    }

    .prose :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
        font-size: 0.95em;
    }

    .prose :global(table th) {
        background-color: #f8f9fa;
        padding: 0.75rem;
        text-align: left;
        font-weight: 600;
        border-bottom: 2px solid #eaecef;
    }

    .prose :global(table td) {
        padding: 0.75rem;
        border-bottom: 1px solid #eaecef;
    }

    .prose :global(table tr:nth-child(even)) {
        background-color: #f8f9fa;
    }
    @media (max-width: 768px) {
        .prose {
            font-size: 1rem;
            line-height: 1.7;
        }

        .prose :global(h1) {
            font-size: 2.2rem;
            scroll-margin-top: 90px; /* Augmenter la marge de défilement sur mobile */
        }

        .prose :global(h2) {
            font-size: 1.7rem;
            scroll-margin-top: 80px;
        }

        .prose :global(h3) {
            font-size: 1.3rem;
            scroll-margin-top: 80px;
        }
    }

    @media (max-width: 480px) {
        .prose :global(h1) {
            font-size: 1.9rem;
            scroll-margin-top: 100px; /* Encore plus de marge sur petits écrans */
        }

        .prose :global(h2) {
            font-size: 1.5rem;
        }
    }
</style>
